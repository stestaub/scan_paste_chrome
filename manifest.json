{
  "manifest_version": 2,
  "name": "Scan'n'Paste",
  "description": "Scan a text with your Smartphone to paste it in textfield",
  "version": "1.0",
  "icons": {
    "128": "ic_launcher.png"
  },
  "browser_action": {
    "default_icon": "ic_launcher.png",
    "default_popup": "credentials.html"
  },
  "permissions":[
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["content.css"],
      "js": ["contentscript.js"]
    }
  ],
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": ["scan-icon.png"],
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
